<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<!-- User List View -->
	<definition name="userListView" extends="template">
		<put-attribute name="title" value="User List" />
		<put-attribute name="body"
			value="/WEB-INF/pages/users/list.jsp" />
	</definition>
    <!-- Profile View -->
    <definition name="profileView" extends="template">
        <put-attribute name="title" value="User Profile" />
        <put-attribute name="body"
            value="/WEB-INF/pages/users/profile.jsp" />
    </definition>
    <!-- User Edit View -->
    <definition name="userEditView" extends="template">
        <put-attribute name="title" value="User Edit" />
        <put-attribute name="body"
            value="/WEB-INF/pages/users/edit.jsp" />
    </definition>
</tiles-definitions>